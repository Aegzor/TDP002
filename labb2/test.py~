def make_triangle(num):
    for v in range(1, (num + 1)):
        print (' ' * (num - v) + '*' * (2 * v - 1) + ' ' * (num - v))

def triangle():
    antal_rader = input('Ange ett heltal: ')
    validator = 0
    if antal_rader.isdigit():
        validator = 1
    while validator == 0:
        antal_rader = input('Värdet du angav var inte ett heltal, försök igen: '
                            )
        if antal_rader.isdigit():
            validator = 1
    antal_rader = int(antal_rader)
    make_triangle(antal_rader)

triangle()
